#for命令(修改当前目录下所有文件权限)
[root@VM_0_16_centos shell]# cat -n test16.sh 
     1	#!/bin/bash
     2	#for循环
     3	str=$(ls)
     4	echo "修改当前文件夹下所有的文件权限为：777"
     5	for arr in $str
     6	do
     7	  if [ -f $arr ]
     8	  then
     9		echo "文件：$arr"
    10	 	chmod -R 777 $arr
    11	  fi
    12	done
	
#修改版
