     2	#if-then-elif-then
     3	if gerp *w* test1
     4	then 
     5	   cd ../
     6	   echo "运行起来了：$(pwd)"
     7	elif pwd
     8	then
     9	  echo "跳转过来了"
    10	fi
    11	exit
